<h2><%= @task.title %></h2>
<%= link_to("Edit this task", edit_task_path(@task))%>
<p><%= @task.details %></p>
<% if @task.completed %>
    <p><input type="checkbox" checked > This task is completed</p>
<% else %>
    <p><input type="checkbox" > You don't have finished this task yet</p>
<% end %> 


<%= link_to "back to list", tasks_path %>
